<%- include('../partials/header') %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-danger text-white">
          <h3 class="mb-0">Đã xảy ra lỗi</h3>
        </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
          </div>
          
          <h4 class="text-center mb-4"><%= message || 'Đã xảy ra lỗi không mong muốn' %></h4>
          
          <div class="text-center">
            <% if (locals.error && process.env.NODE_ENV !== 'production') { %>
              <div class="alert alert-secondary">
                <pre class="mb-0"><%= error.stack %></pre>
              </div>
            <% } %>
            
            <a href="/" class="btn btn-primary">
              <i class="bi bi-house-fill"></i> Về trang chủ
            </a>
            <button class="btn btn-secondary" onclick="window.history.back()">
              <i class="bi bi-arrow-left"></i> Quay lại
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 